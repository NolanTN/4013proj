@model IEnumerable<_4013Project.Models.Investor>

@{
    ViewData["Title"] = "Investors";
}

<div class="container-fluid bg-maroon text-white p-3">
    <h2 class="mb-0">Investors</h2>
</div>

<div class="investors-page py-5">
    <div class="container">
        <div class="row justify-content-center">
            @foreach (var investor in Model)
            {
                <div class="col-md-4 text-center mb-5 d-flex">
                    <div class="investor-card mx-auto">
                        <img src="@investor.ImageUrl"
                             alt="@investor.Name"
                             class="investor-image mb-3" />
                        <h5 class="fw-bold">@investor.Name</h5>
                        <p class="investor-text">
                            @investor.Description
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f0f0d8;
    }

    .bg-maroon {
        background-color: #7a0a0a;
    }

    .investors-page {
        background-color: #fff8dc;
    }

    .investor-card {
        max-width: 240px;
    }

    .investor-image {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        object-fit: cover;
        box-shadow: 0 2px 6px rgba(0,0,0,0.25);
    }

    .investor-text {
        font-size: 0.9rem;
        line-height: 1.4;
    }
</style>


