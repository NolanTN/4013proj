@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-bg"></div>

    <div class="hero-content container-fluid hero-min-height d-flex flex-column justify-content-center align-items-center text-center py-5">

        <div class="mx-auto" style="max-width: 960px;">
            <h1 class="hero-title mb-3">
                Hub for Student Business at the<br />
                University of Oklahoma
            </h1>

            <p class="lead text-muted mb-5">
                Find all of the OU IBC products in one place. Students can also list their own
                products or services!
            </p>
        </div>

        <div class="d-flex flex-wrap justify-content-center gap-5">
            <a asp-controller="Products" asp-action="Index"
               class="btn btn-lg btn-danger rounded-pill px-5 btn-grow">
                IBC Products
            </a>

            <a asp-controller="Apply" asp-action="Index"
               class="btn btn-lg btn-danger rounded-pill px-5 btn-grow">
                Apply
            </a>
        </div>

    </div>
</section>
<section class="py-5" style="background-color: #fff9dd;">
    <div class="container-fluid px-5">

        <!-- ROW 1 -->
        <div class="row align-items-center mb-5">
            <!-- Left image -->
            <div class="col-md-3 d-flex justify-content-center justify-content-md-end">
                <div class="info-img-box">
                    <img src="https://1000logos.net/wp-content/uploads/2021/07/Oklahoma-Sooners-logo.png" alt="OU Logo" class="img-fluid">
                </div>
            </div>

            <!-- Center text -->
            <div class="col-md-6">
                <h3 class="fw-bold">What is IBC?</h3>
                <p>
                    The First Fidelity Bank Integrated Business Core (IBC) gives students real-world experience 
                    by running a simulated company from the ground up. Students develop and market products, 
                    manage teams, and navigate legal and financial decisions while gaining exposure to all 
                    areas of business — from accounting and financial analysis to marketing, supply chain,
                    web development, and regulatory compliance.
                </p>
                <p class="mb-0">
                    This hands-on program equips future entrepreneurs with the skills needed to launch and 
                    lead successful businesses.
                </p>
            </div>

            <!-- Right empty column -->
            <div class="col-md-3"></div>
        </div>

        <!-- ROW 2 -->
        <div class="row align-items-center">
            <!-- Left empty column -->
            <div class="col-md-3"></div>

            <!-- Center text -->
            <div class="col-md-6 text-end">
                <h3 class="fw-bold">Student Businesses</h3>
                <p class="mb-0">
                    Students can list their businesses and side hustles on {SITE NAME}. Students get a free 
                    place to describe what they do, book time slots, confirm orders, and other business services. 
                    You can also link to your social media and grow your following!
                </p>
            </div>

            <!-- Right image -->
            <div class="col-md-3 d-flex justify-content-center justify-content-md-center">
                <div class="handshake-img">
                    <img src="https://freepngimg.com/download/icon/business/70298-management-business-icons-consultant-company-social-marketing.png" alt="OU Logo" class="img-fluid">
                </div>
            </div>
        </div>

    </div>
</section>

<!-- CTA SECTION -->
<section class="py-5" style="background:#7a0d0d;">
    <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">

        <div class="text-white mb-4 mb-md-0">
            <h1 class="fw-bold" style="font-size:2.5rem;">List your Business<br />Grow your Business</h1>
        </div>

        <div>
            <a asp-controller="Apply" asp-action="Index"
                class="btn btn-danger btn-lg rounded-pill px-5 btn-grow"
               style="background:#c01e1e; border:none;">
                APPLY HERE
            </a>
        </div>
    </div>
</section>
<!-- Current IBC Products Section -->
<section class="products-section py-5">
    <div class="container">
        <h2 class="text-center fw-bold mb-5">Current IBC Products</h2>

        <div class="row g-4 justify-content-center">
            @for (int i = 0; i < 8; i++)
            {
                <div class="col-6 col-md-3 d-flex justify-content-center">
                    <a href="#"
                       class="product-card d-block w-100">
                    </a>
                </div>
            }
        </div>
    </div>
</section>

