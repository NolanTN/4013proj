@model IEnumerable<_4013Project.Models.StudentBusinessCard>

@{
    ViewBag.Title = "Student Business";
}

<div class="container-fluid bg-maroon text-white p-3">
    <h2>Student Business</h2>
</div>

<div class="container py-5" style="background-color: #fff7d6;">
    <div class="row justify-content-center">

        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6 mb-4 d-flex justify-content-center">

                <a href="@Url.Action("Details", "StudentBusiness", new { id = item.Id })"
                   class="sb-card text-decoration-none">

                    <img src="@item.ImageUrl" class="sb-img" />

                    <div class="sb-text">
                        <p>@item.Name</p>
                    </div>

                </a>

            </div>
        }

    </div>
</div>

<style>
    .bg-maroon {
        background-color: #7a0a0a;
    }

    .sb-card {
        width: 260px;
        height: 300px;
        background-color: #7a0a0a;
        border-radius: 25px;
        position: relative;
        overflow: hidden;
        color: white;
        display: block;
        transition: transform .2s;
    }

        .sb-card:hover {
            transform: scale(1.05);
            cursor: pointer;
        }

    .sb-img {
        width: 100%;
        height: 70%;
        object-fit: cover;
    }

    .sb-text {
        position: absolute;
        bottom: 20px;
        left: 20px;
    }

        .sb-text p {
            margin: 0;
            font-size: 22px;
            font-weight: bold;
        }
</style>

