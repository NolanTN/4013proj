@model _4013Project.Models.StudentBusinessCard



<div class="details-background">

    <div class="container text-center py-5">

        <!-- Business Image (Hero) -->
        <img src="https://cafnr.missouri.edu/wp-content/uploads/2025/04/FPA-Picture-1-1-1024x768.jpg"
             class="hero-image"
             style="width: 500px; height: auto;" />


        <!-- Business Title -->
        <h2 class="mt-4 mb-3 business-title">@Model.Name</h2>

        <!-- Description Box -->
        <div class="description-box mx-auto p-4">
            <p>@Model.Description</p>
        </div>

        <!-- Buy Button Section -->
        <div class="mt-4">
            <h3 class="buy-title">Click here to Learn More</h3>

            <a href="@Model.ExternalUrl" target="_blank" class="buy-button">
                Go to Our Website <br /> (External Link)
            </a>
        </div>

    </div>
</div>

<style>
    .details-background {
        background-image: url('/Content/images/ou-campus-faded.jpg'); 
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        padding-bottom: 80px;
    }

    .hero-image {
        width: 60%;
        max-width: 650px;
        border-radius: 8px;
    }

    .business-title {
        font-size: 30px;
        font-weight: 800;
        text-decoration: underline;
        color: #2b2b2b;
    }

    .description-box {
        width: 80%;
        background: white;
        border-radius: 12px;
        box-shadow: 0px 0px 10px #d9d9d9;
        font-size: 18px;
        color: #333;
    }

    .buy-title {
        text-decoration: underline;
        font-weight: 700;
        margin-bottom: 10px;
        color: #222;
    }

    .buy-button {
        background-color: #34c759;
        padding: 12px 30px;
        border-radius: 30px;
        display: inline-block;
        color: white !important;
        font-weight: 600;
        text-decoration: none;
        font-size: 18px;
        transition: 0.2s ease-in-out;
    }

    .buy-button:hover {
        background-color: #2db34f;
        transform: scale(1.05);
    }
</style>

