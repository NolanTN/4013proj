<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - _4013Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_4013Project.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background:#7a0d0d;">
            <div class="container-fluid">

                <!-- Left Logo Image -->
                <a class="navbar-brand d-flex align-items-center" href="#">
                    <img src="https://1000logos.net/wp-content/uploads/2021/07/Oklahoma-Sooners-logo.png"
                         alt="Logo"
                         style="width:60px; height:60px; border-radius:50%; object-fit:cover;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Products" asp-action="Index">IBC</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="StudentBusiness" asp-action="Index">OU Student Business</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="#" asp-action="#">Invest</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Apply" asp-action="Index">Apply</a>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main">
        @RenderBody()
    </main>
    

    <!-- GLOBAL CONTACT FOOTER -->
<section class="contact-section py-5 w-100">
    <div class="container-fluid">
        <div class="row align-items-center">

            <!-- Logo circle -->
            <div class="col-md-3 d-flex justify-content-center mb-4 mb-md-0">
                <div class="logo-circle d-flex flex-column justify-content-center text-center">
                    <span>LOGO</span>
                    <span>FILLER</span>
                </div>
            </div>

            <!-- Contact form -->
            <div class="col-md-9 d-flex justify-content-md-end">
                <div class="contact-card">
                    <h5 class="text-center mb-3">Contact Us</h5>

                    <form method="post" action="#">
                        <div class="mb-3">
                            <input type="text" name="Name" class="form-control" placeholder="Name" required />
                        </div>

                        <div class="mb-3">
                            <input type="email" name="Email" class="form-control" placeholder="Email" required />
                        </div>

                        <div class="mb-3">
                            <textarea name="Message" rows="4" class="form-control"
                                      placeholder="Comments, Questions, Concerns"></textarea>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-light btn-sm px-4">Submit</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("Styles", required: false)
</body>
</html>
