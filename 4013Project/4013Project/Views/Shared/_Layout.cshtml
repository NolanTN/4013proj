<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - _4013Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_4013Project.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background:#7a0d0d;">
            <div class="container-fluid">

                <!-- Left Logo Image -->
                <a class="navbar-brand d-flex align-items-center" href="#">
                    <img src="https://1000logos.net/wp-content/uploads/2021/07/Oklahoma-Sooners-logo.png"
                         alt="Logo"
                         style="width:60px; height:60px; border-radius:50%; object-fit:cover;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="#" asp-action="#">IBC</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="#" asp-action="#">OU Students</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="#" asp-action="#">Invest</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Apply" asp-action="Index">Apply</a>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - _4013Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("Styles", required: false)
</body>
</html>
