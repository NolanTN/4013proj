@model _4013Project.Models.Product

@{
    ViewData["Title"] = "Product Description";
}

<!-- PAGE HEADER BAR -->
<div class="container-fluid bg-maroon text-white p-3">
    <h2 class="mb-0">"@Model.Title"</h2>
</div>

<div class="product-details-page py-5">
    <div class="container">

        <!-- HERO IMAGE SECTION -->
        <div class="row justify-content-center mb-4">
            <div class="col-md-8 text-center">
                <div class="product-hero mx-auto">
                    <span>Product Image (Hero Section)</span>
                </div>
            </div>
        </div>

        <!-- DESCRIPTION SECTION -->
        <div class="row justify-content-center mb-4">
            <div class="col-md-10 text-center">
                <h3 class="section-title">Product Description</h3>
                <div class="description-box mt-3 p-4">
                    <p>@Model.Description</p>
                </div>
            </div>
        </div>

        <!-- BUY NOW SECTION -->
        <div class="row justify-content-center">
            <div class="col-md-4 text-center">
                <h4 class="section-title">Buy Now</h4>
                <a href="https://example.com"
                   target="_blank"
                   class="btn btn-success mt-2 px-4">
                    Buy Now (External Link)
                </a>
            </div>
        </div>

    </div>
</div>

<style>
    body {
        background-color: #f0f0d8;
    }

    .bg-maroon {
        background-color: #7a0a0a;
    }

    .product-details-page {
        background-color: #fff8dc;
    }

    .product-hero {
        width: 100%;
        max-width: 600px;
        height: 180px;
        margin-top: 10px;
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 1.1rem;
        /* simple “sky + hills” gradient similar to mockup */
        background: linear-gradient(#cfeaff 0 55%, #8fdc6b 55% 80%, #6bb642 80% 100%);
    }

    .section-title {
        text-decoration: underline;
        text-decoration-thickness: 2px;
    }

    .description-box {
        background-color: white;
        border-radius: 6px;
        min-height: 120px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

