@model _4013Project.Models.Product

@{
    ViewData["Title"] = "Product Description";
}

<div class="container-fluid bg-maroon text-white p-3">
    <h2 class="mb-0">"@Model.Title"</h2>
</div>

<div class="product-details-page py-5">
    <div class="container">

        <!-- HERO IMAGE SECTION -->
        <div class="row justify-content-center mb-4">
            <div class="col-md-8 text-center">
                <div class="product-hero mx-auto">
                    <img src="@Model.ImageUrl"
                         alt="@Model.Title"
                         class="img-fluid hero-img" />
                </div>
            </div>
        </div>

        <!-- DESCRIPTION SECTION -->
        <div class="row justify-content-center mb-4">
            <div class="col-md-10 text-center">
                <h3 class="section-title">Product Description</h3>
                <div class="description-box mt-3 p-4">
                    <p>@Model.Description</p>
                    <p class="fw-bold mt-2">Price: @Model.Cost.ToString("C")</p>
                </div>
            </div>
        </div>

        <!-- BUY NOW SECTION -->
        <div class="row justify-content-center">
            <div class="col-md-4 text-center">
                <h4 class="section-title">Buy Now</h4>
                <a href="https://www.ou.edu" target="_blank" class="btn btn-success mt-2 px-4">
                    Buy Now (External Link)
                </a>
            </div>
        </div>

    </div>
</div>

<style>
    .bg-maroon {
        background-color: #7a0a0a;
    }

    .product-details-page {
        background-color: #fff8dc;
    }

    .product-hero {
        width: 100%;
        max-width: 650px;
        margin-top: 10px;
        border-radius: 6px;
        overflow: hidden;
        background-color: #ffffff;
        padding: 12px;
    }

    .hero-img {
        width: 100%;
        height: 260px;
        object-fit: cover;
    }

    .section-title {
        text-decoration: underline;
        text-decoration-thickness: 2px;
    }

    .description-box {
        background-color: white;
        border-radius: 6px;
        min-height: 120px;
    }
</style>

